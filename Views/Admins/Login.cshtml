@model ValpeVerkkokauppa.ViewModels.LoginViewModel

@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

@using (Html.BeginForm("Login", "Admins", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Email, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.TextBoxFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Email, new { @class = "form-control" })
            @Html.ValidationMessageFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Email)
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Password, new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.PasswordFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Password, new { @class = "form-control" })
            @Html.ValidationMessageFor((ValpeVerkkokauppa.ViewModels.LoginViewModel m) => m.Password)
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Login" class="btn btn-default" />
        </div>
    </div>
}
